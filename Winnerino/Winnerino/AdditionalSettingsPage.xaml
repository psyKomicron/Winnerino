<Page
    x:Class="Winnerino.AdditionalSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winnerino"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="OnPageLoaded">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="20"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BackButton" Style="{StaticResource NavigationBackButtonStyle}" Click="BackButton_Click"/>

        <ListView Grid.Row="1" Grid.ColumnSpan="2" SelectionMode="None">
            <ListView.Header>
                <TextBlock Text="Additional settings" Style="{ThemeResource SubheaderTextBlockStyle}" Margin="20,0,0,20"/>
            </ListView.Header>
            <ListView.Resources>
                <Style TargetType="ListViewHeaderItem">
                    <Setter Property="Margin" Value="0,0,0,-2"/>
                </Style>
            </ListView.Resources>

            <Expander Style="{StaticResource ExpanderSettingStyle}">
                <Expander.Header>
                    <local:AppExpanderHeader Glyph="&#xe9f5;" Title="General" Subtitle="Navigation, history, startup"/>
                </Expander.Header>

                <StackPanel Spacing="{StaticResource StackPanelDefaultSpacing}" Margin="{StaticResource ExpanderContentMargin}">

                    <CheckBox
                        Content="Auto-load setting page"
                        IsChecked="False"
                        ToolTipService.ToolTip="Load corresponding setting page when navigating from a page"/>

                    <CheckBox 
                        x:Name="LoadLastPageToggleSwitch"
                        Content="Save and restore last page" 
                        Click="LoadLastPageToggleSwitch_Toggled"/>
                </StackPanel>
            </Expander>

            <Grid Style="{StaticResource GridExpanderStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <local:AppExpanderHeader VerticalAlignment="Center" Glyph="&#xea8f;" Title="Notifications" Subtitle="Turn notifications on/off"/>
                <ToggleSwitch
                    x:Name="NotificationsSwitch" 
                    Grid.Column="1" 
                    Margin="{StaticResource ToggleSwitchCenterMargin}"
                    VerticalAlignment="Center" 
                    Toggled="NotificationsSwitch_Toggled"/>
            </Grid>

            <ListViewHeaderItem/>

            <Expander Style="{StaticResource ExpanderSettingStyle}">
                <Expander.Header>
                    <local:AppExpanderHeader Glyph="&#xe790;" Title="App theme" Subtitle="Choose application theme"/>
                </Expander.Header>

                <StackPanel Spacing="{StaticResource StackPanelDefaultSpacing}" Margin="{StaticResource ExpanderContentMargin}">
                    <RadioButton x:Name="DarkThemeRadioButton" Content="Dark" Checked="DarkThemeButton_Click"/>
                    <RadioButton x:Name="LightThemeRadioButton" Content="Light" Checked="LightThemeButton_Click"/>
                    <RadioButton x:Name="DefaultThemeRadioButton" Content="Use system setting" Checked="DefaultThemeButton_Click"/>
                </StackPanel>
            </Expander>

            <Expander Style="{StaticResource ExpanderSettingStyle}" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <local:AppExpanderHeader Glyph="&#xe799;" Title="Appearance" Subtitle="Title bar, secondary windows appearance"/>
                </Expander.Header>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <CheckBox
                        Content="Title bar animated icon"
                        IsChecked="True"
                        Margin="{StaticResource ExpanderContentMargin}"
                        VerticalAlignment="Center"
                        Click="AnimatedIconToggleSwitch_Toggled"/>

                    <Rectangle Style="{StaticResource ExpanderSeparatorStyle}" Grid.Row="1"/>

                    <Rectangle Style="{StaticResource ExpanderSeparatorStyle}" Grid.Row="3"/>

                    <StackPanel Grid.Row="4" Spacing="3" Margin="{StaticResource ExpanderContentMargin}">

                        <CheckBox
                            x:Name="ShowSearchWindowInSwitchers"
                            Content="Show window in switchers (Alt + Tab)"
                            Click="ShowSearchWindowInSwitchers_Toggled" 
                            Grid.Column="1"/>
                        <CheckBox
                            x:Name="FilePropertiesWindowInSwitchers"
                            Content="Show window in switchers (Alt + Tab)"
                            Click="ShowFilePropertiesWindowInSwitchers_Toggled" 
                            Grid.Column="1"/>
                    </StackPanel>
                </Grid>
            </Expander>

            <Expander Style="{StaticResource ExpanderSettingStyle}" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <local:AppExpanderHeader Glyph="&#xe799;" Title="Tranparency effects" Subtitle="Use tranparency effects, control transparency type">
                        <local:AppExpanderHeader.RightContent>

                            <ToggleSwitch 
                                x:Name="UseAcrylicToggleSwitch"
                                Margin="{StaticResource ToggleSwitchCenterMargin}" 
                                VerticalAlignment="Center" 
                                HorizontalAlignment="Right"
                                Toggled="UseAcrylicCheckBox_Click"/>
                        </local:AppExpanderHeader.RightContent>
                    </local:AppExpanderHeader>
                </Expander.Header>

                <Grid Margin="{StaticResource ExpanderContentMargin}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Control individual window transparency settings"/>
                    <StackPanel Grid.Row="1" Spacing="3" Margin="5">
                        <CheckBox
                            x:Name="SearchWindowUsesAcrylic"
                            Content="In file search window"
                            IsEnabled="{x:Bind TransparencyControlsEnabled}"
                            Grid.Column="1"
                            Click="SearchWindowUsesAcrylic_Toggled"/>
                        <CheckBox
                            x:Name="FilePropertiesWindowUsesAcrylic"
                            Content="In file properties window"
                            IsEnabled="{x:Bind TransparencyControlsEnabled}"
                            Grid.Column="1"
                            Click="FilePropertiesWindowUsesAcrylic_Toggled"/>
                    </StackPanel>

                    <Rectangle Style="{StaticResource ExpanderSeparatorStyle}" Margin="-51,8,-16,15" Grid.Row="2"/>

                    <TextBlock Text="Choose transparency effect type" Grid.Row="3"/>
                    <StackPanel Grid.Row="4" Spacing="3" Margin="5">
                        <RadioButton x:Name="AcrylicRadioButton" Content="Acrylic"/>
                        <RadioButton x:Name="MicaRadioButton" Content="Mica"/>
                    </StackPanel>
                </Grid>
            </Expander>

            <ListViewHeaderItem/>

            <Expander Style="{StaticResource ExpanderSettingStyle}" HorizontalContentAlignment="Stretch">
                <Expander.Header>
                    <local:AppExpanderHeader Glyph="&#xef58;" Title="App data" Subtitle="Clear and export settings, clear temporary data"/>
                </Expander.Header>

                <Grid Margin="{StaticResource ExpanderContentMargin}" RowSpacing="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <HyperlinkButton Grid.Column="0" Grid.Row="0" Content="Open application folder (File explorer)" Click="AppDataFolderHyperlink_Click"/>
                    <HyperlinkButton Grid.Column="0" Grid.Row="1" Content="Open application settings folder (File explorer)" Click="AppSettingsFolderHyperlink_Click"/>
                    <HyperlinkButton Grid.Column="0" Grid.Row="2" Content="Open temporary folder (File explorer)" Click="TempDataFolderHyperlink_Click"/>
                    
                    <Button Grid.Column="1" Grid.Row="0" Click="OpenSettingsFile_Click" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource StackPanelButtonSpacing}">
                            <FontIcon Glyph="&#xE8A7;" FontSize="{StaticResource IconButtonFontSize}"/>
                            <TextBlock Text="Export settings"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="1" Click="ResetSettingsFile_Click" HorizontalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" Spacing="{StaticResource StackPanelButtonSpacing}">
                            <FontIcon Glyph="&#xe845;" FontSize="{StaticResource IconButtonFontSize}"/>
                            <TextBlock Text="Reset settings"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="1" Grid.Row="2" Content="Clear temporary folder" Click="ClearTempFolderButton_Click"/>
                </Grid>
            </Expander>
        </ListView>
    </Grid>
</Page>
