<Page
    x:Class="Winnerino.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinHeight="200"
    MinWidth="200"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource NavigationBackButtonStyle}" Click="Button_Click"/>

            <Grid RowSpacing="40" Margin="30,0,30,10" Grid.Column="1" Grid.Row="1">
                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="IsTextSelectionEnabled" Value="True"/>
                        <Setter Property="TextWrapping" Value="Wrap"/>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <ListView
                    Background="{ThemeResource ExpanderBackground}" 
                    SelectionMode="None"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="16"
                    Grid.Row="0">
                    <ListView.Header>
                        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="What's new" Margin="10,0,0,10"/>
                    </ListView.Header>
                    
                    <TextBlock Text="- Added file actions (cut, copy, delete, rename) for multiple files."/>

                    <ListViewHeaderItem/>
                    <TextBlock Margin="0,0,0,20" Text="Fixes" Style="{StaticResource SubheaderTextBlockStyle}"/>
                    <TextBlock Text="- Fixed application crash when open a directory before all current directory size have been calculated."/>
                </ListView>

                <ListView 
                    SelectionMode="None" 
                    Grid.Row="1"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    Padding="16"
                    Background="{ThemeResource ExpanderBackground}">
                    <ListView.Header>
                        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="Known issues" Margin="10,0,0,10" VerticalAlignment="Center"/>
                    </ListView.Header>
                    <ListViewHeaderItem/>

                    <TextBlock Text="- Scrolling through a long list may cause the application to crash."/>
                    <TextBlock Text="- Application becomes unresponsive when loading a directory with a lot of files."/>
                    <TextBlock Text="- Application may crash after sorting if the number of files is large (> 5000)."/>
                    <TextBlock Text="- Application may move outside of screen bounds, it will be fixed in future versions."/>
                </ListView>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
