<Page
    x:Class="Winnerino.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <VariableSizedWrapGrid ItemWidth="250" ItemHeight="180" Orientation="Horizontal" Margin="20,30,10,10">
                <Button Style="{StaticResource HomeButtonStyle}" ToolTipService.ToolTip="See full change log">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Version:" Grid.Row="0"/>
                        <TextBlock x:Name="versionTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource HomeButtonStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Release type:" Grid.Row="0"/>
                        <TextBlock x:Name="buildTypeTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource HomeButtonStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="#README" Grid.Row="0"/>
                        <TextBlock Text="GitHub" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>
            </VariableSizedWrapGrid>

            <ListView x:Name="updateNotesListView" SelectionMode="None" Grid.Row="1" Margin="10,50,0,20" ScrollViewer.CanContentRenderOutsideBounds="False">
                <ListView.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="IsTextSelectionEnabled" Value="True"/>
                    </Style>
                </ListView.Resources>
                <ListView.Header>
                    <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="What's new" Margin="10,0,0,10"/>
                </ListView.Header>

                <ListViewHeaderItem/>
                <TextBlock Margin="0,0,0,20" Text="General" Style="{ThemeResource SubheaderTextBlockStyle}"/>


                <ListViewHeaderItem/>
                <TextBlock Margin="0,0,0,20" Text="Explorer" Style="{ThemeResource SubheaderTextBlockStyle}"/>


                <ListViewHeaderItem/>
                <TextBlock Margin="0,0,0,20" Text="Twitch chat" Style="{ThemeResource SubheaderTextBlockStyle}"/>


                <ListViewHeaderItem/>
                <TextBlock Margin="0,0,0,20" Text="Drives explorer" Style="{ThemeResource SubheaderTextBlockStyle}"/>


                <ListViewHeaderItem/>
                <TextBlock Margin="0,0,0,20" Text="Power plans" Style="{ThemeResource SubheaderTextBlockStyle}"/>
            </ListView>

            <ListView SelectionMode="None" Grid.Row="2" Margin="10,50,0,20" ScrollViewer.CanContentRenderOutsideBounds="True">
                <ListView.Header>
                    <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="Known issues" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </ListView.Header>

                <ListViewHeaderItem/>
                <TextBlock Text="- Application may crash on window close when using Twich page (some settings of this page may be lost when this happens)."/>
                <TextBlock Text="- Scrolling through a long list may cause the application to crash."/>
                <TextBlock Text="- Application becomes unresponsive when loading directory with a lot of files (Explorer page)."/>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
