<Page
    x:Class="Winnerino.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    MinHeight="200"
    MinWidth="200">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Button Style="{StaticResource HomeButtonStyle}" VerticalAlignment="Stretch" ToolTipService.ToolTip="See full change log" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Version:" Grid.Row="0"/>
                    <TextBlock x:Name="versionTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource HomeButtonStyle}" VerticalAlignment="Stretch" Grid.Row="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Release type:" Grid.Row="0"/>
                    <TextBlock x:Name="buildTypeTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                </Grid>
            </Button>

            <Button Style="{StaticResource HomeButtonStyle}" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="#README" Grid.Row="0"/>
                    <TextBlock Text="GitHub" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                </Grid>
            </Button>
        </Grid>

        <ScrollViewer Grid.Column="1">
            <Grid RowSpacing="40" Margin="0,20,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <ListView 
                    x:Name="updateNotesListView" 
                    Background="{ThemeResource ControlFillColorDefault}" 
                    SelectionMode="None"
                    CornerRadius="5"
                    Padding="0,20"
                    Grid.Row="0" 
                    ScrollViewer.CanContentRenderOutsideBounds="False">
                    <ListView.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="IsTextSelectionEnabled" Value="True"/>
                        </Style>
                    </ListView.Resources>
                    <ListView.Header>
                        <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="What's new" Margin="10,0,0,10"/>
                    </ListView.Header>

                    <ListViewHeaderItem/>
                    <TextBlock Margin="0,0,0,20" Text="Redesigned" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                    <TextBlock Text="The application has been simplified in this version to only focus on the file explorer functionnalities." TextWrapping="Wrap"/>

                    <ListViewHeaderItem/>
                    <TextBlock Margin="0,0,0,20" Text="New" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                    <TextBlock Text="- Sorting (by size descending) added." TextWrapping="Wrap"/>
                    <TextBlock Text="- Updated user interface." TextWrapping="Wrap"/>
                    <TextBlock Text="- More compact input zone to leave more vertical space for files and directories." TextWrapping="Wrap"/>
                    <TextBlock Text="- Added footer to display additional informations." TextWrapping="Wrap"/>
                    <TextBlock Text="- Added extra information (image preview for files, directory child items for directories) on mouse hover." TextWrapping="Wrap"/>

                    <ListViewHeaderItem/>
                    <TextBlock Margin="0,0,0,20" Text="Fixes" Style="{ThemeResource SubheaderTextBlockStyle}"/>
                    <TextBlock Text="- Fixed application crash when open a directory before all current directory size have been calculated." TextWrapping="Wrap"/>
                </ListView>

                <ListView 
                    SelectionMode="None" 
                    Grid.Row="1"
                    CornerRadius="5"
                    Padding="0,20"
                    Background="{ThemeResource ControlFillColorDefault}" 
                    ScrollViewer.CanContentRenderOutsideBounds="True">
                    <ListView.Header>
                        <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="Known issues" Margin="10,0,0,10" VerticalAlignment="Center"/>
                    </ListView.Header>
                    <ListViewHeaderItem/>

                    <TextBlock Text="- Scrolling through a long list may cause the application to crash." TextWrapping="Wrap"/>
                    <TextBlock Text="- Application becomes unresponsive when loading directory with a lot of files (Explorer page)." TextWrapping="Wrap"/>
                    <TextBlock Text="- Application may crash after sorting if the number of files is large (> 5000)." TextWrapping="Wrap"/>
                    <TextBlock Text="- Application may render outside of bounds, it will be fixed in future versions." TextWrapping="Wrap"/>
                </ListView>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
