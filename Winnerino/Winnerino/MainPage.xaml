<Page
    x:Class="Winnerino.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <VariableSizedWrapGrid ItemWidth="250" ItemHeight="180" Orientation="Horizontal" Margin="20,30,10,10">
                <Button Style="{StaticResource HomeButtonStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Version:" Grid.Row="0"/>
                        <TextBlock x:Name="versionTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource HomeButtonStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Release type:" Grid.Row="0"/>
                        <TextBlock x:Name="buildTypeTextBlock" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>

                <Button Style="{StaticResource HomeButtonStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="#README" Grid.Row="0"/>
                        <TextBlock Text="GitHub" Grid.Row="1" Style="{StaticResource HomeTitleTextBlockStyle}"/>
                    </Grid>
                </Button>
            </VariableSizedWrapGrid>

            <ListView x:Name="updateNotesListView" SelectionMode="None" Grid.Row="1" Margin="10,50,0,20">
                <ListView.Header>
                    <TextBlock Style="{ThemeResource HeaderTextBlockStyle}" Text="What's new" Margin="10,0,0,10"/>
                </ListView.Header>

                <ListViewHeaderItem/>
                <ListViewItem Margin="0,0,0,25">
                    <StackPanel Spacing="{StaticResource StackPanelDefaultSpacing}">
                        <TextBlock Text="General" Style="{ThemeResource TitleTextBlockStyle}" FontSize="22"/>

                        <TextBlock Text="- Added update notes !"/>
                        <TextBlock Text="- Added custom title bar, if the system supports it."/>
                        <TextBlock Text="- Added option (in settings) to load or not the last used page."/>
                        <TextBlock Text="- App title now changes with the currently loaded page."/>
                    </StackPanel>
                </ListViewItem>

                <ListViewHeaderItem/>
                <ListViewItem Margin="0,0,0,25">
                    <StackPanel Spacing="{StaticResource StackPanelDefaultSpacing}">
                        <TextBlock Text="Explorer" Style="{ThemeResource TitleTextBlockStyle}" FontSize="22"/>

                        <TextBlock Text="- Updated path completion to include drives."/>
                        <TextBlock Text="- Fixed completion from selecting items in the drop down."/>
                        <TextBlock Text="- Added tab support (and they are saved from session to session)."/>
                        <TextBlock Text="- Added file type display."/>
                        <TextBlock Text="- Added recents/favorites."/>
                        <TextBlock Text="- Added back navigation (forward to come)."/>
                    </StackPanel>
                </ListViewItem>

                <ListViewHeaderItem/>
                <ListViewItem Margin="0,0,0,25">
                    <StackPanel Spacing="{StaticResource StackPanelDefaultSpacing}">
                        <TextBlock Text="Power plans" Style="{ThemeResource TitleTextBlockStyle}" FontSize="22"/>

                        <TextBlock Text="- Power plan can be changed."/>
                    </StackPanel>
                </ListViewItem>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
