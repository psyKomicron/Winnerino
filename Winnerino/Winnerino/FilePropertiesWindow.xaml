<Window
    x:Class="Winnerino.FilePropertiesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Winnerino"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="TitleBarGrid" Background="{ThemeResource PageBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ContentColumn" Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TabView 
            x:Name="LocalTabView"
            VerticalAlignment="Stretch"
            CornerRadius="{StaticResource ControlCornerRadius}"
            CanReorderTabs="True"
            TabWidthMode="Equal"
            Grid.Column="1"
            Grid.RowSpan="2"
            TabCloseRequested="LocalTabView_TabCloseRequested"
            AddTabButtonClick="LocalTabView_AddTabButtonClick"
            Loaded="TitleBarGrid_Loaded">
            <TabView.TabStripHeader>
                <Grid x:Name="TabStripHeader" HorizontalAlignment="Stretch" Background="DarkSlateBlue">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                        <ColumnDefinition x:Name="LeftDragColumn" Width="*" MaxWidth="20"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabView.TabStripHeader>
            <TabView.TabStripFooter>
                <Grid x:Name="TabStripFooter" HorizontalAlignment="Stretch" Background="DarkSlateBlue" SizeChanged="TabStripFooter_SizeChanged">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition x:Name="RightDragColumn" Width="*"/>
                        <ColumnDefinition x:Name="RightPaddingColumn" Width="138"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabView.TabStripFooter>

            <TabViewItem Header="Display" Height="40">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Spacing="20">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Window width:"/>
                        <TextBlock x:Name="WindowWidthTextBlock"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Drag rectangle X:"/>
                        <TextBlock x:Name="FooterX"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Drag rectangle width:"/>
                        <TextBlock x:Name="FooterWidth"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Tab strip footer width:"/>
                        <TextBlock x:Name="RightPaddingTextBlock"/>
                    </StackPanel>
                </StackPanel>
            </TabViewItem>
        </TabView>

